<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Night mode). -->
    <style name="Theme.FilterApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_variant</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_variant</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/primary_variant</item>
        <item name="colorOnSurface">@color/on_primary</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary</item>
    </style>
</resources>
