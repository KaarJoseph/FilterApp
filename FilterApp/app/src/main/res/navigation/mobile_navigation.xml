<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_feed">

    <!-- Fragmento para Feed -->
    <fragment
        android:id="@+id/navigation_feed"
        android:name="com.example.filterapp.ui.feed.FeedFragment"
        android:label="@string/title_feed"
        tools:layout="@layout/fragment_feed" />

    <!-- Fragmento para Publicar -->
    <fragment
        android:id="@+id/navigation_publish"
        android:name="com.example.filterapp.ui.publish.PublishFragment"
        android:label="@string/title_publish"
        tools:layout="@layout/fragment_publish" />

    <!-- Fragmento para Perfil -->
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.filterapp.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>
